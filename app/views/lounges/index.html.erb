<%= render "shared/header" %>

<div class="back-img-home">
  <div class="bkRGBA">
    <div class='main'>


      <div class='title-contents'>
        <h2 class='service-title'>
          談話室一覧
        </h2>
      </div>

      <div class='lounges-contents'>
        <ul>
          <% @lounges.each do |lounge| %>
            <li class='lounge-content'>
              <%= link_to lounge_path(lounge) do %>
                <%= image_tag('lounge-icon.png', class:'lounge_icon') %>
                <%= lounge.category.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>

<%= render "shared/footer" %>
