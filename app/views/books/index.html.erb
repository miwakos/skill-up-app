        <ul class='book-contents'><%= render partial: 'book', collection: @books9 %></ul>
        <ul class='book-contents'><%= render partial: 'book', collection: @books10 %></ul>
        <ul class='book-contents'><%= render partial: 'book', collection: @books11 %></ul>
        <ul class='book-contents'><%= render partial: 'book', collection: @books12 %></ul>
        <ul class='book-contents'><%= render partial: 'book', collection: @books13 %></ul>
        <ul class='book-contents'><%= render partial: 'book', collection: @books14 %></ul>
