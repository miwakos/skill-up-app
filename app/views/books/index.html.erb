<%= render "shared/header" %>

<div class="back-img-library">
  <div class="bkRGBA">
    <div class='main'>


      <div class='title-contents-flex'>
        <div class="title-contents-left">
          <h2 class='service-title'>
            図書館
          </h2>
        </div>
        <div class="title-contents-right">
          <div class='create-btn-content'>
            <%= link_to new_book_path, cass: 'create-btn', id: "create-btn" do %>
                <div class="create-btn">新しく図書カードに<br>記録する</div>
            <% end %>
          </div>
        </div>
      </div>

      <div class='category-tags-content'>
        <div class='category-tags'>
          <ul class="category-tags-menu">
            <li class="category-name active">すべて</li>
            <% @categories.each do |category| %>
              <li class="category-name"><%= category.name %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="book-contents-main">

        <%# 全ての書籍一覧 %>
        <ul class='book-contents show'>
          <%= render partial: 'book', collection: @books %>
        </ul>
