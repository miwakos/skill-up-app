<%= render "shared/header" %>

<div class="back-img-library">
  <div class="bkRGBA">
    <div class='main'>


      <div class='title-contents-flex'>
        <div class="title-contents-left">
          <h2 class='service-title'>
            図書館
          </h2>
        </div>
        <div class="title-contents-right">
          <div class='create-btn-content'>
            <%= link_to new_book_path, cass: 'create-btn', id: "create-btn" do %>
                <div class="create-btn">新しく図書カードに<br>記録する</div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="book-detail-content-main">
        <div class='book-detail-content-box'>

          <div class='book-detail-content'>
            <% if user_signed_in? && @book.user_id == current_user.id %>
              <div class="book-detail-edit">
                <%= link_to '編集', edit_book_path(@book), class:"book-detail-edit-btn" %>
                <%= link_to '削除', book_path(@book), method: :delete, class:"book-detail-edit-btn" %>
              </div>
            <% end %>

            <div class="book-detail-post-user-name">
              ［<%= @book.created_at.month%>/<%= @book.created_at.day %> <%= @book.created_at.strftime('%R') %>］
              <%= link_to '#', cass: "book-detail-post-user-link" do %>
                <span><%= @book.user.user_information.nickname %></span>
              <% end %>
              さんの図書カードより
            </div>
            <div class="book-detail-category-box">
              <div class="book-detail-category"><%= @book.category.name %></div>
            </div>
            <div class="book-detail-img-content">
              <%= image_tag @book.image.variant(resize: '82x118'), class: 'book-detail-img' %>
            </div>
            <div class="book-detail-title"><%= @book.book_title %></div>
            <div class="book-detail-author"><%= @book.author %></div>
            <div class="book-detail-introduction"><%= @book.book_introduction %></div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<%= render "shared/footer" %>
