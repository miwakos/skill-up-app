<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>

  <%# ヘッダー① %>
  <div class='nav-top'>
    <div class='nav-top-left'>
      <%= link_to image_tag("skill-up-logo-x.png", class:"site-icon"), "/" %>
    </div>

    <div class='nav-top-right'>
      <%= form_with(url: '#', local: true, method: :get, class: "search-form") do |f| %>
        <%= f.text_field :keyword, placeholder: 'キーワードから探す', class: 'input-box' %>
        <%= image_submit_tag("search.png" ,class: "search-button") %>
      <% end %>
      <ul class='user-nav'>
        <% if user_signed_in? %>
          <% if current_user.user_information.user_icon == 'male' %>
            <%= image_tag('user-icon-male.png', class: 'user-icon--img', id: 'user-icon--img') %>
          <% elsif current_user.user_information.user_icon == 'female' %>
            <%= image_tag('user-icon-female.png', class: 'user-icon--img', id: 'user-icon--img') %>
          <% end %>
          <li><%= link_to current_user.user_information.nickname, user_path(current_user), class: "user-nickname", id: "user-nickname" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to 'ログイン',new_user_session_path , class: "login" %></li>
          <li><%= link_to '新規登録',new_user_registration_path , class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>

  </div>
  <%# //ヘッダー① %>

  <%# ヘッダー② %>
  <div class='nav-bottom'>
    <ul class='nav-lists'>
      <li class='nav-list'><%= link_to '学習室', "#", class:"nav-list-name" %></li>
      <li class='nav-list'><%= link_to '談話室', lounges_path, class:"nav-list-name" %></li>
      <li class='nav-list'><%= link_to '相談室', "#", class:"nav-list-name" %></li>
      <li class='nav-list'><%= link_to 'アウトプット', "#", class:"nav-list-name" %></li>
      <li class='nav-list'><%= link_to 'イベント掲示板', "#", class:"nav-list-name" %></li>
      <li class='nav-list'><%= link_to '図書館', books_path, class:"nav-list-name" %></li>
      <li class='nav-list'><%= link_to 'ヘルプ', "#", class:"nav-list-name" %></li>
    </ul>
  </div>
  <%# //ヘッダー② %>

</header>